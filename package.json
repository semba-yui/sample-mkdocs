{
  "name": "sample-docs",
  "version": "1.0.0",
  "description": "サンプル仕様書",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "docs:build": "poetry run mkdocs build --clean",
    "docs:lint": "textlint docs/**/*.md --ignore-path .textlintignore",
    "docs:serve": "poetry run mkdocs serve",
    "oas:build": "npx redocly build-docs ./docs/02_backend/api/interface/open-api/sample-oas3.yaml -o ./docs/02_backend/api/interface/open-api/out/sample-oas.html",
    "oas:format": "npx openapi-format ./docs/02_backend/api/interface/open-api/sample-oas3.yaml",
    "oas:lint": "npx spectral lint ./docs/02_backend/api/interface/open-api/sample-oas3.yaml --ruleset ./docs/02_backend/api/interface/open-api/.spectral.yaml",
    "oas:mock": "npx prism mock ./docs/02_backend/api/interface/open-api/sample-oas3.yaml",
    "plantuml:build": "./docs/diagrams/plantuml/build.sh",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/semba-yui/sample-docs.git"
  },
  "author": "Yui Semba",
  "bugs": {
    "url": "https://github.com/semba-yui/sample-docs/issues"
  },
  "lint-staged": {
    "*.{puml,pu}": [
      "npm run plantuml:build"
    ],
    "*-oas3.yaml": [
      "npm run oas:lint",
      "npm run oas:format"
    ],
    "*.md": [
      "npm run docs:lint"
    ]
  },
  "homepage": "https://yui-semba-sample-docs.netlify.app",
  "devDependencies": {
    "@redocly/cli": "^1.34.3",
    "@stoplight/prism-cli": "^5.14.2",
    "@stoplight/spectral-cli": "^6.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "netlify-cli": "^21.4.2",
    "openapi-format": "^1.26.0",
    "textlint": "^14.7.1",
    "textlint-filter-rule-allowlist": "^4.0.0",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-rule-preset-ja-technical-writing": "^12.0.2"
  }
}
